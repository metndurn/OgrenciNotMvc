@using OgrenciNotMvc.Models.EntityFramework
@model List<Kulupler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Kulüp Id</th>
        <th>Kulüp Adı</th>
        <th>Kulüp Kontenjanı</th>
    </tr>
    <tbody>
        @foreach (var kulup in Model)
        {
            <tr>
                <td>@kulup.KulupId</td>
                <td>@kulup.KulupAd</td>
                <td>@kulup.KulupKontenjan</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kulupler/YeniKulup/" class="btn btn-primary">Yeni Kulüp Ekle</a>